<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= moto.modelo %> - Ficha Técnica</title>
    <link rel="stylesheet" href="../css/modelo.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;800&display=swap" rel="stylesheet">
</head>
<body>
    <div class="ficha-museo">
        <div class="botones">
            <a href="javascript:history.back()" class="boton-atras">Atrás</a>
            <a href="/pagina_historia" class="boton-catalogo">¡Descubrí la historia del Museo!</a>
        </div>

        <!-- <img src="../../img/motos/<%=moto.img%>" alt="<%= moto.modelo %>"> -->
        <img src="../../img/motos/<%= moto.img && moto.img !== '' ? moto.img : 'predeterminada.png' %>"
        alt="<%= moto.nombre %>" 
        class="card-img">
        <h1><%= moto.nombre %></h1>

        <div class="detalles">
<% 
  // helper: devuelve true si el valor es "válido" para mostrar
  function isValid(v) {
    if (v === undefined) return false;
    if (v === null) return false;
    // aceptar números (0) y booleanos (false)
    if (typeof v === 'number' || typeof v === 'boolean') return true;
    const s = String(v).trim();
    if (s === '') return false;
    // si contiene 'null' (cualquier parte), no mostrar
    if (/null/i.test(s)) return false;
    return true;
  }
%>

<ul>
  <% if (isValid(moto.nombre)) { %>
    <li><strong>Nombre:</strong> <%= moto.nombre %></li>
  <% } %>

  <% if (isValid(moto.año)) { %>
    <li><strong>Año:</strong> <%= moto.año %></li>
  <% } %>

  <% if (isValid(moto.origen)) { %>
    <li><strong>Origen:</strong> <%= moto.origen %></li>
  <% } %>

  <% if (isValid(moto.cc)) { %>
    <li><strong>Cilindrada:</strong> <%= moto.cc %></li>
  <% } %>

  <% if (isValid(moto.HP)) { %>
    <li><strong>HP:</strong> <%= moto.HP %></li>
  <% } %>

  <% if (isValid(moto.Velocidades)) { %>
    <li><strong>Velocidades:</strong> <%= moto.Velocidades %></li>
  <% } %>

  <% if (isValid(moto.arranque)) { %>
    <li><strong>Arranque:</strong> <%= moto.arranque %></li>
  <% } %>

  <% if (isValid(moto.marchas)) { %>
    <li><strong>Marchas:</strong> <%= moto.marchas %></li>
  <% } %>

  <% if (isValid(moto.rodado)) { %>
    <li><strong>Rodado:</strong> <%= moto.rodado %></li>
  <% } %>

  <% if (isValid(moto.motor)) { %>
    <li><strong>Motor:</strong> <%= moto.motor %></li>
  <% } %>

  <% if (isValid(moto.carburador)) { %>
    <li><strong>Carburador:</strong> <%= moto.carburador %></li>
  <% } %>

  <% if (isValid(moto.color)) { %>
    <li><strong>Color:</strong> <%= moto.color %></li>
  <% } %>

  <% if (isValid(moto.frenos)) { %>
    <li><strong>Frenos:</strong> <%= moto.frenos %></li>
  <% } %>

  <% if (isValid(moto.embrague)) { %>
    <li><strong>Embrague:</strong> <%= moto.embrague %></li>
  <% } %>

  <% if (isValid(moto.observaciones)) { %>
    <li><strong>Observaciones:</strong> <%= moto.observaciones %></li>
  <% } %>

  <% if (isValid(moto.codigo)) { %>
    <li><strong>ID Artículo:</strong> <%= moto.codigo %></li>
  <% } %>

  <% if (isValid(moto.idUnico)) { %>
    <li><strong>ID Único:</strong> <%= moto.idUnico %></li>
  <% } %>
</ul>
</ul>
        </div>
    </div>
</body>
</html>